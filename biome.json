{
	"$schema": "https://biomejs.dev/schemas/2.3.15/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"includes": ["**", "!!**/dist"]
	},
	"formatter": {
		"indentStyle": "space",
		"indentWidth": 4
	},
	"linter": {
		"rules": {
			"style": {
				"useConst": "off",
				"useTemplate": "off"
			},
			"suspicious": {
				"noExplicitAny": "off",
				"noDoubleEquals": "off",
				"noAssignInExpressions": "off"
			},
			"complexity": {
				"noUselessThisAlias": "off"
			}
		}
	},
	"overrides": [
		{
			"includes": ["src/**/*.ts"],
			"linter": {
				"rules": {
					"suspicious": {
						"noExplicitAny": "off",
						"noPrototypeBuiltins": "off"
					}
				}
			}
		}
	]
}
